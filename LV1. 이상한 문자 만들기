#include <string>
#include <vector>
#include <iostream>
using namespace std;

string solution(string s) {
    string answer = "";
    
    for(int i =0;i<s.size();i++){
        if(i%2 == 0){//짝수인 경우
             answer.push_back(toupper(s[i]));
        }
        else{// 홀수인 경우
            answer.push_back(s[i]);
        }
    }
    
    return answer;
}
